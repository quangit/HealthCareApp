<?xml version="1.0" encoding="utf-8"?>

<Frame HasShadow="False" xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="HealthCare.Controls.CreditCardView"
       xmlns:local="clr-namespace:HealthCare.Helpers;assembly=HealthCare"
       BackgroundColor="{x:Static local:AppStyles.BorderGrayColor}" Padding="1">
    <ContentView BackgroundColor="{x:Static local:AppStyles.GreenColor}" Padding="0, 20, 0, 0">
        <!-- main content-->
        <StackLayout x:Name="idBound" BackgroundColor="#ffffff"
                     Orientation="Horizontal" Spacing="10" Padding="20, 20, 0, 20"
                     VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Image Source="ic_info.png" VerticalOptions="Center" />
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" Padding="20, 0, 0, 0">
                <Label x:Name="idNumber" FontSize="16" FontAttributes="Bold" TextColor="Black" />
                <Label x:Name="idDes" FontSize="14" FontAttributes="None" TextColor="Black" />
            </StackLayout>
            <Image x:Name="idLogo" VerticalOptions="Center" HorizontalOptions="EndAndExpand"
                   HeightRequest="50" WidthRequest="80" />
        </StackLayout>
    </ContentView>
</Frame>