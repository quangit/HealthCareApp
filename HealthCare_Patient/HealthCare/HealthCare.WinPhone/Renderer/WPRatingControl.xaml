<UserControl x:Class="HealthCare.WinPhone.Renderer.WPRatingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource TransparentBrush}"
             Background="Transparent"
             xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    d:DesignHeight="480" d:DesignWidth="480">


    <controls:Rating x:Name="control" Value="3.3" Background="Transparent">
        <controls:Rating.FilledItemStyle>
            <Style TargetType="controls:RatingItem">
                <Setter Property="Background" Value="#FFCF0C" />
            </Style>
        </controls:Rating.FilledItemStyle>
        <controls:Rating.UnfilledItemStyle>
            <Style TargetType="controls:RatingItem">
                <Setter Property="Background" Value="#A0A1A5" />
            </Style>
        </controls:Rating.UnfilledItemStyle>
    </controls:Rating>
    
</UserControl>