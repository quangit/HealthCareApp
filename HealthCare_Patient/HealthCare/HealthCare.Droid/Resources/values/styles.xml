<resources>

  <!-- Activity themes -->

  <style name="AppTheme" parent="Theme.Base" />

  <style name="Theme.Base" parent="android:Theme.Holo.Light" >
    <!--<item name="android:button">@style/HealthCareButton</item>-->
    <item name="android:actionBarStyle">@style/MyActionBar</item>
    <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:actionBarStyle">@style/MyActionBar</item>
    <item name="android:actionBarDivider">@null</item>
    <item name="android:ratingBarStyleSmall">@style/RatingBarStyleSmall</item>
  
  </style>
  <style name="RatingBarStyleSmall" parent="@android:style/Widget.Holo.Light.RatingBar.Small">
    <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
                <item name="android:minHeight">18dip</item>
                <item name="android:maxHeight">18dip</item>
    </style>
 
  <!-- Widget styling -->

  <style name="HealthCareButton" parent="android:style/Widget.Button">
    <!--<item name="android:background">#00000000</item>-->
  </style>

  <style name="TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">#ffffff</item>
  </style>

  <!-- ActionBar tabs styles -->
  <style name="MyActionBarTabs"
         parent="android:style/Widget.Holo.ActionBar.TabView">
    <!-- tab indicator -->
    <item name="android:background">@drawable/actionbar_tab_indicator</item>
  </style>

  <!-- ActionBar styles -->
  <style name="MyActionBar"
         parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">#04d967</item>
  <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
  <item name="android:icon">@android:color/transparent</item> <!-- This does the magic! -->
  </style>

  <style name="Theme.Splash"
    parent="android:Theme">
    <item name="android:windowBackground">
      @drawable/splashscreen
    </item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>

  <style name="CalendarTitle">
    <item name="android:textSize">@dimen/calendar_text_medium</item>
    <item name="android:textColor">@color/calendar_text_active</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="CalendarCell">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center</item>
<!--    <item name="android:textAlignment">center</item>-->
  </style>

  <style name="CalendarCell.DayHeader">
    <item name="android:textColor">@color/calendar_text_active</item>
    <item name="android:textSize">@dimen/calendar_text_small</item>
  </style>

  <style name="CalendarCell.CalendarDate">
    <item name="android:textSize">@dimen/calendar_text_medium</item>
    <item name="android:background">@drawable/calendar_bg_selector</item>
    <item name="android:textColor">@color/calendar_text_selector</item>
    <item name="android:clickable">true</item>
    <item name="android:textStyle">bold</item>
  </style>

</resources>